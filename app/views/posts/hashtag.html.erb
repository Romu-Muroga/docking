<div class="wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8 col-md-offset-2 col-md-8">
        <div class="hashname_area">
          #<%= @hashtag.hashname %>
        </div>
        <div class="hashtag_post_area">
          <% @hashtag_posts.each do |hashtag_post| %>
            <div class="col-xs-4 col-md-4 iine_post">
              <% if hashtag_post.picture.present? %>
                <%= link_to post_path(hashtag_post) do %>
                  <%= image_tag(hashtag_post.picture.image.url) %>
                  <div class="mask">
                		<div class="caption">Learn more!</div>
                	</div>
                <% end %>
              <% else %>
                <%= link_to post_path(hashtag_post) do %>
                  <%= image_tag("/images/default2.jpg") %>
                  <div class="mask">
                    <div class="caption">Learn more!</div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
