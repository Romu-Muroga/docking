<% if post.persisted? && post.picture.present? %>
  <%= image_tag(post.picture.image.url, class: "imgView") %>
  <div class="mask" onclick="$('#upfile').click()">
    <div class="mask_message">
      <i class="fas fa-file-import fa-5x"></i>
    </div>
  </div>
<% else %>
  <%= image_tag('/images/default2.jpg', class: "imgView") %>
  <div class="mask" onclick="$('#upfile').click()">
    <div class="mask_message">
      <i class="fas fa-file-import fa-5x"></i>
    </div>
  </div>
<% end %>
