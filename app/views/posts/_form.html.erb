<%= form_with(model: post, local: true, class: "form_outer") do |f| %>
  <div class="form_inner">
    <% if post.errors.any? %>
      <div id="error_explanation"><!-- TODO: CSS当たってない？ -->
        <h2><%= post.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :ranking_point %>
      <!-- formはデフォルトで""がついてしまうため、.keysが必要 -->
      <%= f.select :ranking_point, Post.ranking_points.keys, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :eatery_name, "店名（出来るだけ正確な店名でのご登録をお願いいたします）" %>
      <%= f.text_field :eatery_name, placeholder: "例：（店名：中華一番）○ 中華一番 x 中華いちばん", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :eatery_food %>
      <%= f.text_field :eatery_food, placeholder: "例：醤油ラーメン", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :eatery_address, "所在地（任意）" %>
      <%= f.text_field :eatery_address, placeholder: "例：東京都渋谷区", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :eatery_website, "店のホームページ（任意）" %>
      <%= f.text_field :eatery_website, placeholder: "例：https://xxxxxxx.com", class: "form-control" %>
    </div>
    <!-- Pictureモデルのimage属性をセット -->
    <div class="form-group">
      <%= f.label :image, "画像（任意）" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :remarks %>
      <%= f.text_area :remarks, class: "form-control" %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
