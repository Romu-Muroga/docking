<div class="wrapper" id="login_block">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-offset-3 col-xs-6 col-md-offset-4 col-md-4 input_form_area">
        <h3><%= t("views.sessions.login_page") %></h3>
        <!-- Sessionモデルがないため、リソースの名前とそれに対応するURLを指定する必要がある -->
        <%= form_with(scope: :session, url: login_path, local: true, class: "form_outer") do |f| %>
          <div class="form_inner">
            <div class="form-group">
              <%= f.label :email, t('sessions.email') %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, t('sessions.password') %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
          <%= f.submit t('sessions.login'), class: "btn btn-primary" %>
        <% end %>
        <p><%= t('sessions.no_account') %><%= link_to t('sessions.here'), new_user_path %></p>
        <div class="otameshi_insert_data" style="border: solid 1px white; padding: 6px;">
          ※お試し用入力データ<br>
          メールアドレス：test@dic.com<br>
          パスワード：password
        </div>
      </div>
    </div>
  </div>
</div>
