<h1>ログイン画面</h1>
<!-- Sessionモデルがないため、リソースの名前とそれに対応するURLを指定する必要がある -->
<%= form_with(scope: :session, url: sessions_path, local: true, class: "form_outer") do |f| %>
  <div class="form_inner">
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
