<table class="table">
  <thead>
    <tr>
      <th><%= t('views.admin.users.account_name') %></th>
      <th><%= t('views.admin.users.administrator_rights') %></th>
      <th></th><!-- 空マス -->
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% if user.admin %>
          <td><%= t('views.admin.users.yes') %></td>
        <% else %>
          <td><%= t('views.admin.users.no') %></td>
        <% end %>
        <td>
          <%= link_to t('views.edit_button'), edit_admin_user_path(user) %>&nbsp;
          <%= link_to t('views.delete_button'),
                       admin_user_path(user),
                       method: :delete,
                       data: { confirm: t('views.admin.users.user_delete_message', user: user.name) },
                       class: "user_destroy_link"
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
