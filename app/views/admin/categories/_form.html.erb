<%= form_with(model: [:admin, category], local: true, class: "form_outer") do |f| %>
  <div class="form_inner">
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h5><%= t('error_occurred') %></h5>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name_ja %>
      <%= f.text_field :name_ja, required: "required", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :name_en %>
      <%= f.text_field :name_en, required: "required", class: "form-control" %>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
