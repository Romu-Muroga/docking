<p class="move_page_link clearfix">
  <%= link_to_previous_page categories, t('.prev_page'), class: "prev_page" %>
  <%= link_to_next_page categories, t('.next_page'), class: "next_page" %>
</p>
<table class="table">
  <thead>
    <tr>
      <th><%= Category.human_attribute_name(:name_ja) %></th>
      <th><%= Category.human_attribute_name(:name_en) %></th>
      <th></th><!-- 空マス -->
    </tr>
  </thead>
  <tbody>
    <% categories.each do |category| %>
      <tr>
        <td class="category_name_td"><%= category.name_ja %></td>
        <td><%= category.name_en %></td>
        <td>
          <%= link_to t('edit_button'), edit_admin_category_path(category) %>&nbsp;
          <%= link_to t('delete_button'),
                       admin_category_path(category),
                       method: :delete,
                       data: { confirm: t('.category_confirm_deletion', category: category.name_ja) },
                       class: "category_destroy_link"
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
